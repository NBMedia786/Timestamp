GEMINI_API_KEY=''



PORT=3001

# Timeouts & retries

STREAM_TIMEOUT_MS=1800000      # 30m per request window to be safe

GEN_ATTEMPTS=5                 # retries per segment

MAX_OUTPUT_TOKENS=1536

RATE_LIMIT_MIN_MS=31000        # ~2 RPM for free tier



# YouTube knobs (smaller = faster/safer)

YT_MAX_HEIGHT=720

YT_CONC_FRAGMENTS=8

YT_MAX_MINUTES=0               # if >0, only first N minutes downloaded



# Pre-upload transcode (shrinks file before ANY analysis)

TRANSCODE_BEFORE_UPLOAD=1

TRANSCODE_HEIGHT=360

TRANSCODE_BITRATE=900k

TRANSCODE_AUDIO=96k



# Segmentation (server will cut the local/yt file)

SEGMENT_SECONDS=180            # 3-minute chunks



# Optional last-resort fallback model

ALLOW_MODEL_FALLBACK=1         # 1 = try gemini-2.5-flash if Pro fails

